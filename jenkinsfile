pipeline {
    agent any
    tools {
        maven 'maven-3.8.7'  // EXACT name from Jenkins Global Tool Configuration
    }
    stages {
        stage('SCM') {
            steps {
                git 'https://github.com/Anushamanchikatla/test-maven-anusha.git'
            }
        }
        stage('version') {
            steps {
                sh 'mvn --version'
            }
        }
        stage('install') {
            steps {
                sh 'mvn install'
            }
        }
    }
}
